
<div class="wrapper display" > 
<!-- <div class= "wrapper displayEntries"> -->
	<div class =" wrapper entries">
		<h2> Here Are Your Entries</h2> </br>
		{{#each entry}}
		<table id = "posts"> 

				<tr>
					<td id="title"><span id="index">Diary: </span> <span id ="indextext">{{this.diary_name}}</span></td>
				</tr>

				<tr>
					<td style="width:42%" id="title"><span id="index">Title: </span> <span id ="indextext">{{this.entry.title}}</span></td>
					<td style="width:41%" id="title"><span id="index">Date: </span><span id ="indextext">{{this.entry.formatDate}}</span></td>
					
				</tr>
				<tr>
					
					<table id="tdtext" style="width:90%" >
						<tr><span id="index">Entry: </span></br>
							<td><span id ="indextext">{{{this.entry.text}}}</span></td>
						</tr>
					</table>
					
				</tr>
				</br>
			<!-- if there are images show them! -->
			<!-- {{#if this.entry.images}}
