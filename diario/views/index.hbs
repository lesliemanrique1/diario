				<table width="100%" id = "imageTable">	
				{{#each this.entry.images}}
					<td><img width="50px" src="{{this}}"></td>
				{{/each}}
				</table>
			</tr>
			{{/if}} -->
			
		

		</table>
		{{/each}}
				 
	</div>
</div> 

<div class ="sideBar">
	<div class="left">
		<h2> Diaries </h2></br>
		{{#each diaryNames}}
	
			<p><a href = "/diary-posts/{{this.slug}}"> {{this.diary_name}} </a></p></br>
	
		{{/each}}
	</div>
</div>
