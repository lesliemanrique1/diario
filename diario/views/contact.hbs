{{#if message}}

	<div class = "Thank You"> 
		<h2> Thank You </h2>
		<p> You message has been received. </p>
		<p> Thank you for contacting us! </p> 


	</div> 
{{else if error}}
	<div class = "Err"> 
		<h2> Error </h2>
		<p> We are sorry. There was an error with submitting your request.</p> 
	</div>

{{else}}
	
	<div class="wrapper form">

		
		<form class="general" method="post" action="">
			<h2> Contact Us Form </h2> 
			<div class="form-group">
		    	<label>Your Name</label>
		    	<input type="text" name="name" placeholder="Username">
		 	</div>
		  	<div class="form-group">
		    	<label>Your Email</label>
		    	<input type="email"  name="emailAddress" placeholder="Password">
		  	</div>
			<div> <p>Your Message</p>
				<textarea value=" " name="messageBody" cols="55" rows="5"></textarea> 
			</div> 
		  	<button id="submitMess", type="submit">Send Message</button>
		</form>
	</div> 
{{/if}}
